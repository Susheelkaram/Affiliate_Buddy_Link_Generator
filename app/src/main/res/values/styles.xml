<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/defaultTextView_style</item>
        <item name="buttonStyle">@style/defaultButton_style</item>


        <!--<item name="android:actionBarStyle">@style/custom_ActionBar</item>-->

    </style>

    <style name="defaultTextView_style" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/opensans_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:iconTint">@color/colorWhite</item>
    </style>


    <style name="defaultButton_style" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/opensans_light</item>
    </style>


    <style name="Style_HeadingSettings">
        <item name="android:capitalize">words</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
    </style>


    <style name="Style_Affid_Spinner"  parent="android:Widget.DeviceDefault.Spinner">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>
    <style name="SpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/rectangle_spinner</item>
    </style>
    <style name="SpinnerDropDownItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--Text Field Style-->
    <style name="InputUrlTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:colorFocusedHighlight">@color/colorBlack</item>
        <item name="hintTextAppearance">@style/MyHintStyle</item>
    </style>
    <style name="MyHintStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!--About Page Styles-->
    <style name="aboutCardViewStyle" parent="CardView.Light">
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="aboutHeadingStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="aboutItemStyle">
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:onClick">itemOnClick</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple</item>
    </style>

    <style name="getMoreButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:minWidth">0dp</item>
    </style>
</resources>
