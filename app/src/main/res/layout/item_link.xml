<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:clipToPadding="false">

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.CardView"
        android:background="@color/colorWhite">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <TextView
                android:id="@+id/textView_hTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/opensans_regular"/>

            <TextView
                android:id="@+id/textView_hUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Url"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:autoLink="web"
                android:textColorLink="@color/colorGrey"
                android:drawableEnd="@drawable/ic_open_in_new_black_24dp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorDarkGrey"
                android:layout_marginEnd="10dp"/>
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/colorLightGrey"/>-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.design.button.MaterialButton
                    android:id="@+id/button_hCopy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    app:icon="@drawable/ic_content_copy_black_24dp"
                    android:layout_marginRight="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp"
                    android:minWidth="10dp"
                    android:layout_alignParentLeft="true"/>

                <android.support.design.button.MaterialButton
                    android:id="@+id/button_hShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    app:icon="@drawable/ic_share_black_24dp"
                    android:layout_marginRight="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp"
                    android:minWidth="10dp"
                    android:layout_toRightOf="@id/button_hCopy"/>

                <android.support.design.button.MaterialButton
                android:id="@+id/button_hDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                app:icon="@drawable/ic_delete_black_24dp"
                android:paddingStart="10dp"
                android:paddingEnd="6dp"
                android:minWidth="10dp"
                android:layout_alignParentRight="true"/>

            </RelativeLayout>
        </LinearLayout>


    </android.support.design.card.MaterialCardView>

</LinearLayout>